<div class="container mt-4">
  <div class="card shadow-lg">
    <div class="card-header bg-warning text-white">
      <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Book</h3>
    </div>
    <div class="card-body">
      <%= form_with(model: @book, local: true, html: { class: "needs-validation" }) do |form| %>
        <div class="mb-3">
          <%= form.label :book_title, "Book Title", class: "form-label" %>
          <%= form.text_field :book_title, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :author_ids, "Authors", class: "form-label" %>
          <%= form.collection_check_boxes :author_ids, Author.all, :id, :full_name do |b| %>
            <div class="form-check">
              <%= b.check_box(class: "form-check-input") %>
              <%= b.label(class: "form-check-label") do %>
                <%= b.object.full_name %>  <!-- Display full name of each author -->
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="d-flex gap-2">
          <%= form.submit "Update Book", class: "btn btn-success shadow-sm" %>
          <a href="<%= books_path %>" class="btn btn-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to Books
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
