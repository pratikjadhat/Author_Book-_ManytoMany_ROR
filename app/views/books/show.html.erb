<h1 class="mb-4 text-center text-primary">Book Details</h1>

<div class="card shadow-lg p-4">
  <div class="card-body">
    <% if @book.present? %>
      <h4 class="card-title text-dark"><%= @book.book_title %></h4>
      <p class="card-text text-muted"><strong>ID:</strong> <%= @book.id %></p>

      <h5 class="mt-4">Authors</h5>
      <div>
        <% @book.authors.each do |author| %>
          <%= link_to author.full_name, author_path(author), class: "badge bg-primary text-decoration-none me-1" %>
        <% end %>
      </div>

      <div class="mt-3">
        <%= link_to "Edit", edit_book_path(@book), class: "btn btn-warning" %>
        <%= link_to "Back to Books", books_path, class: "btn btn-secondary" %>
      </div>
    <% else %>
      <p class="text-danger">Book not found.</p>
      <%= link_to "Back to Books", books_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>
