<h1 class="mb-4 text-center text-primary">Author Details</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3 class="card-title">Author: <%= @author.first_name %> <%= @author.last_name %></h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p><strong>First Name:</strong> <%= @author.first_name %></p>
              <p><strong>Last Name:</strong> <%= @author.last_name %></p>
              <p><strong>Date of Birth:</strong> <%= @author.date_of_birth.strftime("%B %d, %Y") %></p>
            </div>
            <div class="col-md-6">
              <h5>Books Written:</h5>
              <ul >
                <% @author.books.each do |book| %>
                  <li class="list-group-item mb-3">
                    <%= link_to book.book_title, book_path(book), class: "btn btn-primary btn-sm" %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="card-footer text-right">
          <%= link_to 'Back to Authors', authors_path, class: "btn btn-secondary" %>
          <%= link_to 'Edit Author', edit_author_path(@author), class: "btn btn-warning" %>
        </div>
      </div>
    </div>
  </div>
</div>
