<h1 class="mb-4 text-center text-primary">Add New Author</h1>

<%= form_with(model: @author, local: true, html: { class: "form-horizontal" }) do |form| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :first_name, class: "form-label" %>
        <%= form.text_field :first_name, class: "form-control", placeholder: "Enter First Name" %>
      </div>
      
      <div class="mb-3">
        <%= form.label :last_name, class: "form-label" %>
        <%= form.text_field :last_name, class: "form-control", placeholder: "Enter Last Name" %>
      </div>
      
      <div class="mb-3">
        <%= form.label :date_of_birth, class: "form-label" %>
        <%= form.date_field :date_of_birth, class: "form-control" %>
      </div>

      <h4 class="mt-4">Add Books</h4>
      <div id="books_fields">
        <%= form.fields_for :books do |book_form| %>
          <div class="mb-3">
            <%= book_form.label :book_title, "Book Title", class: "form-label" %>
            <%= book_form.text_field :book_title, class: "form-control", placeholder: "Enter Book Title" %>
          </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-between">
        <%= form.submit "Save Author & Books", class: "btn btn-success btn-lg" %>
        <%= link_to "Back to Authors", authors_path, class: "btn btn-secondary btn-lg" %>
      </div>
    </div>
  </div>
<% end %>
